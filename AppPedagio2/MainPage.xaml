<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPedagio2.MainPage"
             Title="Viagem">

    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalTextAlignment" Value="Center"/>
            <Setter Property="VerticalOptions" Value="FillAndExpand"/>
        </Style>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Listar Viagens" Clicked="ToolbarItem_Clicked_2"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="Origem"/>
            <Entry x:Name="txt_origem"/>

            <Label Text="Destino"/>
            <Entry x:Name="txt_destino"/>

            <Label Text="Distancia"/>
            <Entry x:Name="txt_distancia"/>

            <Label Text="Rendimento"/>
            <Entry x:Name="txt_rendimento"/>

            <Label Text="Preco"/>
            <Entry x:Name="txt_preco"/>

            <Grid RowDefinitions="*" ColumnDefinitions="*, *" ColumnSpacing="5" Padding="5">
                <Button Grid.Row="0" Grid.Column="0" Text="Adicionar Pedagio" Clicked="Button_Clicked_1"/>

                <Button Grid.Row="0" Grid.Column="1" Text="Calcular" Clicked="Button_Clicked"/>
            </Grid>

        </VerticalStackLayout>
    </ContentPage.Content>

</ContentPage>
